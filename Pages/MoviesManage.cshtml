@page
@model MoviesManageModel
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Quản lý phim";
}
<div class="container py-4">
    <h2 class="mb-4">Quản lý phim</h2>
    <a href="/MoviesManageAdd" class="btn btn-primary mb-3">Thêm phim</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên phim</th>
                <th>Thể loại</th>
                <th>Thời lượng</th>
                <th>Năm</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>@movie.Id</td>
                <td>@movie.Name</td>
                <td>@movie.Genre</td>
                <td>@movie.Duration</td>
                <td>@movie.Year</td>
                <td>
                    <a href="/MoviesManageEdit?id=@movie.Id" class="btn btn-sm btn-warning">Sửa</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@movie.Id" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Xóa phim này?')">Xóa</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div> 