@page
@model MoviesManageEditModel
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Sửa phim";
}
<div class="container py-4">
    <h2 class="mb-4">Sửa phim</h2>
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Tên phim</label>
            <input type="text" name="Name" class="form-control" value="@Model.Movie.Name" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Thể loại</label>
            <input type="text" name="Genre" class="form-control" value="@Model.Movie.Genre" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Thời lượng (phút)</label>
            <input type="number" name="Duration" class="form-control" value="@Model.Movie.Duration" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Năm</label>
            <input type="number" name="Year" class="form-control" value="@Model.Movie.Year" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Rating</label>
            <input type="number" step="0.1" name="Rating" class="form-control" value="@Model.Movie.Rating" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Ảnh</label>
            <input type="text" name="Image" class="form-control" value="@Model.Movie.Image" required />
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a href="/MoviesManage" class="btn btn-secondary ms-2">Quay lại</a>
    </form>
</div> 