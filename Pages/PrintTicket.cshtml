@page
@model PrintTicketModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>In vé</title>
    <style>
        body { font-family: Arial, sans-serif; background: #f8f9fa; }
        .ticket { background: #fff; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.08); max-width: 400px; margin: 40px auto; padding: 32px 24px; }
        .ticket-title { font-size: 1.5rem; font-weight: bold; margin-bottom: 12px; }
        .ticket-info { margin-bottom: 8px; }
        .ticket-label { color: #888; min-width: 90px; display: inline-block; }
        .ticket-status { font-weight: bold; color: #0d6efd; }
        .btn { display: inline-block; padding: 8px 20px; border-radius: 6px; background: #0d6efd; color: #fff; border: none; font-size: 1rem; margin-top: 18px; cursor: pointer; }
        .btn:active { background: #0b5ed7; }
    </style>
</head>
<body>
    <div class="ticket">
        <div class="ticket-title">Vé xem phim</div>
        <div class="ticket-info"><span class="ticket-label">Phim:</span> @Model.Booking?.Showtime?.Movie?.Name</div>
        <div class="ticket-info"><span class="ticket-label">Rạp:</span> @Model.Booking?.Showtime?.Cinema?.Name</div>
        <div class="ticket-info"><span class="ticket-label">Suất chiếu:</span> @Model.Booking?.Showtime?.Time.ToString("dd/MM/yyyy HH:mm")</div>
        <div class="ticket-info"><span class="ticket-label">Ghế:</span> @Model.Booking?.Seats</div>
        <div class="ticket-info"><span class="ticket-label">Khách:</span> @Model.Booking?.CustomerName</div>
       
    </div>
    <script>
        window.onload = function() { window.print(); };
    </script>
</body>
</html> 